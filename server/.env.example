PORT=3000
FRONTEND_URL=http://localhost:5173

# mediasoup Configuration
# Your server's public IP address (required for WebRTC connections)
# For local development: 127.0.0.1
# For production: Your server's actual public IP (e.g., 203.0.113.1)
ANNOUNCED_IP=127.0.0.1

# RTC Port Range (UDP ports for media streaming)
# Ensure these ports are open in your firewall
# Default: 40000-49999 (10,000 ports)
RTC_MIN_PORT=40000
RTC_MAX_PORT=49999

# Optional: TURN Server Configuration (for NAT traversal)
# Uncomment if you need TURN server support
# TURN_URL=turn:your-turn-server.com:3478
# TURN_USERNAME=your-username
# TURN_PASSWORD=your-password
